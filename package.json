{
  "name": "react-typescript-electron-boilerplate",
  "version": "0.0.1",
  "description": "A electron boilerplate that can be used with React and Typescript",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "build": "webpack --mode=development",
    "build-production": "webpack --mode=production",
    "production": "npm run build-production && electron-builder build --win",
    "dev": "concurrently \"npm run react:dev\" \"npm run electron:dev\"",
    "react:dev": "webpack serve --mode=development --config ./webpack.react.js",
    "electron:dev": "nodemon --dev",
    "start": "npm run build && nodemon"
  },
  "build": {
    "appId": "be.example.app",
    "productName": "React Typescript Electron Boilerplate",
    "copyright": "Copyright Â© 2021 John Doe",
    "directories": {
      "output": "installer"
    },
    "win": {
      "target": "nsis",
      "icon": "build/wololo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "John Doe",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@svgr/webpack": "^5.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.14",
    "concurrently": "^6.3.0",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "nodemon": "^2.0.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.3.0"
  },
  "dependencies": {}
}
